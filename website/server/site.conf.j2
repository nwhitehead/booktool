
server {
    listen 80;
    listen [::]:80;

    {% if ansible_connection != 'local' %}
        server_name www.shimmermathlabs.com shimmermathlabs.com;
    {% endif %}

    root /var/www/shimmermathlabs;

    index index.html;

    location / {
        try_files $uri $uri/ /index.html =404;
    }
}
